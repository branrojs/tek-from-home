#start the server at 0.0.0.0
rails s -b $IP -p $PORT

#show the movement on the database migrations
rake db:migrate:status


#generate a migration 
rails generate migration add_column_to_table key:value

#generate the CRUD for a entity
rails generate scaffold Table key:value key:value

#show all the routes
rake routes


#generate models/controller Diagrams with railsroad
rake diagram:all

#generate db diagram with rails erb
rake erb