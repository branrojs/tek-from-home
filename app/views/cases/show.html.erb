<%- model_class = Case -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:public_id) %>:</strong></dt>
  <dd><%= @case.public_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status_id) %>:</strong></dt>
  <dd><%= @case.status_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:action_plan) %>:</strong></dt>
  <dd><%= @case.action_plan %></dd>
</dl>
<% if current_user and current_user.admin? %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
                cases_path, :class => 'btn btn-default'  %>
<% else %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
                 mywork_path(current_user), :class => 'btn btn-default'  %>
<% end %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_case_path(@case), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                case_path(@case),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>

